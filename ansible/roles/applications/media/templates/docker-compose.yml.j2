---
version: "3.8"
name: media
services:
  nzbget:
    image: lscr.io/linuxserver/nzbget:latest
    container_name: nzbget
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
    volumes:
      - ./nzbget-data:/config
      - /primary/media/downloads/nzbget:/downloads
    ports:
      - 6789:6789
    restart: unless-stopped
  
 
  transmission:
    image: lscr.io/linuxserver/transmission:latest
    container_name: transmission
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
      - TRANSMISSION_WEB_HOME=
      - USER=
      - PASS=
      - WHITELIST=
      - PEERPORT=
      - HOST_WHITELIST=
    volumes:
      - ./transmission-data:/config
      - /primary/media/downloads/transmission:/downloads
    ports:
      - 9091:9091
    restart: always

  jackett:
    image: lscr.io/linuxserver/jackett:latest
    container_name: jackett
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
      - AUTO_UPDATE=true
      - RUN_OPTS=
    volumes:
      - ./jackett-data:/config
    ports:
      - 9117:9117
    restart: unless-stopped

  