---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: monica
  namespace: misc
spec:
  ingressClassName: cloudflare-tunnel
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: monica
                port:
                  number: 80
      host: "{{ monica_fqdn }}"