apiVersion: v1
kind: Service
metadata:
  labels:
    app: rtorrent
  name: rtorrent
  namespace: media
spec:
  ports:
    - name: "8080"
      port: 8080
      targetPort: 8080
    - name: "8000"
      port: 8000
      targetPort: 8000
  selector:
    app: rtorrent
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: rtorrent
  name: rtorrent-peer
  namespace: media
spec:
  type: NodePort
  ports:
    - name: "50000"
      port: 50000
      targetPort: 50000
      nodePort: 32001
      protocol: TCP
  selector:
    app: rtorrent