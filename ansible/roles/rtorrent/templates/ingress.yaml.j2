---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: rtorrent
  namespace: media
spec:
  ingressClassName: cloudflare-tunnel
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: rtorrent
                port:
                  number: 8080
      host: "rtorrent.micahf.net"
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: rtorrent
                port:
                  number: 8000
      host: "rtorrent-api.micahf.net"