---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: metabase
  namespace: greatlakes
spec:
  ingressClassName: cloudflare-tunnel
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: metabase
                port:
                  number: 3000
      host: "{{ metabase_fqdn }}"